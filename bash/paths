# Add homebrew paths
export PATH="~/bin:~/.bin:/usr/local/homebrew/bin:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/local/git/bin:$PATH"

export PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/sbin:/usr/sbin

# Add paths for sm
export PATH="${PATH}:/Users/pboling/.sm/bin:/Users/pboling/.sm/pkg/active/bin:/Users/pboling/.sm/pkg/active/sbin"

# Heroku's Postgres.app (for 9.4)
export PATH="/Applications/Postgres.app/Contents/Versions/9.4/bin:$PATH"

# Java!
export JAVA_HOME=`/usr/libexec/java_home -v 1.7`

# EC2 tools
export EC2_HOME=~/.ec2/tools

# Add EC2 tools to path
export PATH=$PATH:$EC2_HOME/bin

# Add node to path:
export PATH=$PATH:/usr/local/share/npm/bin

export MANPATH="/usr/local/man:/usr/local/mysql/man:/usr/local/git/man:$MANPATH"
